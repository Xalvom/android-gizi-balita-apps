<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/shape_rectangle_white"
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/pilih_balita"/>
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text="@string/titikDua"/>
        <Spinner
            android:id="@+id/gSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"></Spinner>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Umur "
            android:textSize="16sp"/>
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text="@string/titikDua"/>
        <EditText
            android:id="@+id/gUmur"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="Umur Balita (Bulan)"
            android:ems="10"
            android:enabled="false"
            android:textColor="@color/colorBlack"
            android:inputType="text"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="  Bulan"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Berat Badan"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text="@string/titikDua"/>
        <EditText
            android:id="@+id/gBeratBadan"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="Berat Badan (Kg)"
            android:ems="10"
            android:enabled="false"
            android:textColor="@color/colorBlack"
            android:inputType="numberDecimal"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="  / Kg"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tinggi Badan "
            android:textSize="16sp"/>
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text="@string/titikDua"/>
        <EditText
            android:id="@+id/gTinggiBadan"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:hint="Tinggi Badan (cm)"
            android:ems="10"
            android:textColor="@color/colorBlack"
            android:enabled="false"
            android:inputType="number"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="  / cm"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="3dp"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/colorRed"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Last Update "
            android:textSize="12sp"/>
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text="@string/titikDua"/>
        <TextView
            android:id="@+id/gUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="{Last_Update}"
            android:ems="10"
            android:textSize="12sp"
            android:textColor="@color/colorRed"
            android:enabled="false"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">
        <Button
            android:clickable="true"
            android:enabled="false"
            android:id="@+id/gSubmit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Simpan Data"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:background="@drawable/shape_rectangle_green"
            android:textColor="#FFF"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>