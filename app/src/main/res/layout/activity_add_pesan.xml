<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    tools:context=".Activity.AddPesanActivity">
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ib_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah Konsultasi"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Judul"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text="@string/titikDua"/>
        <EditText
            android:id="@+id/ipPsnJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Judul Konsultasi"
            android:ems="10"
            android:textColor="@color/colorBlack"
            android:enabled="true"
            android:inputType="text"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Isi Pesan"
            android:layout_gravity="top"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text="@string/titikDua"/>
        <EditText
            android:id="@+id/ipPsnIsi"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Isi Konsultasi"
            android:ems="10"
            android:textColor="@color/colorBlack"
            android:enabled="true"
            android:inputType="text|textMultiLine"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <Button
            android:clickable="true"
            android:enabled="true"
            android:id="@+id/btn_submit_psn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Kirim Konsultasi"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:background="@drawable/shape_rectangle_green"
            android:textColor="#FFF"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>