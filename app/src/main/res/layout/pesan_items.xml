<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:foreground="?android:selectableItemBackground"
    android:clickable="true"
    android:padding="5dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="12dp"
    card_view:contentPadding="4dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Tanggal"/>
            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:text="@string/titikDua"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="30 Februari 2030"
                android:id="@+id/psTanggal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/psTextPengirim"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Penjawab"/>
            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:text="@string/titikDua"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="(Admin)"
                android:id="@+id/psPengirim"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Judul"/>
            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:text="@string/titikDua"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Penanganan Balita"
                android:id="@+id/psJudul"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Pertanyaan"/>
            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:text="@string/titikDua"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Jadi bla bla bla bla bla bla bla Jadi bla bla bla bla bla bla bla Jadi bla bla bla bla bla bla bla Jadi bla bla bla bla bla bla bla Jadi bla bla bla bla bla bla bla Jadi bla bla bla bla bla bla bla"
                android:maxLines="3"
                android:id="@+id/psPer"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Jawaban"/>
            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:text="@string/titikDua"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Jadi bla bla bla bla bla bla bla Jadi bla bla bla bla bla bla bla Jadi bla bla bla bla bla bla bla Jadi bla bla bla bla bla bla bla Jadi bla bla bla bla bla bla bla Jadi bla bla bla bla bla bla bla"
                android:maxLines="3"
                android:id="@+id/psIsi"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>