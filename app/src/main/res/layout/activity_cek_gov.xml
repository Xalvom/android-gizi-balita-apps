<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CekGovActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="16dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Pilih Balita"/>
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text="@string/titikDua"/>
        <Spinner
            android:id="@+id/spinnerCek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"></Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="5dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="right"
                android:background="@color/colorGrey"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Silahkan Checklist jika anak anda sudah bisa:"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/colorRed"
                android:textSize="15dp"
                android:padding="3dp"
                android:layout_marginBottom="4dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="right"
                android:background="@color/colorGrey"/>
            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="*Jika Bayi belum bisa melakukan minimal salah satu hal di bawah ini, bawa bayi ke dokter/bidan/perawat"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:textColor="@color/colorRed"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/infoCek"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="*Bawa anak usia"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:textColor="@color/colorRed"
                android:textSize="15dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_cek"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/gov_items" />
            </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:visibility="visible" />
</RelativeLayout>