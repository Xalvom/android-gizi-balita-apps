<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    tools:context=".Activity.EditBalitaActivity">
    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ib_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Balita"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Nama Balita "
            android:textSize="16sp"/>
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text="@string/titikDua"/>
        <EditText
            android:id="@+id/ebNamaBalita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/colorBlack"
            android:enabled="true"
            android:inputType="text"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Orang Tua "
            android:textSize="16sp"/>
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text="@string/titikDua"/>
        <EditText
            android:id="@+id/ebOrtuBalita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/colorBlack"
            android:enabled="true"
            android:inputType="text"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Alamat Balita"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text="@string/titikDua"/>
        <EditText
            android:id="@+id/ebRtBalita"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="RT"
            android:ems="10"
            android:textColor="@color/colorBlack"
            android:enabled="true"
            android:inputType="text"
            android:layout_marginLeft="8dp"/>
        <EditText
            android:id="@+id/ebRwBalita"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:hint="RW"
            android:ems="10"
            android:textColor="@color/colorBlack"
            android:enabled="true"
            android:inputType="text"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"/>
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text=""/>
        <EditText
            android:id="@+id/ebAlamatBalita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dusun / Dukuh"
            android:ems="10"
            android:textColor="@color/colorBlack"
            android:enabled="true"
            android:inputType="text"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Jenis Kelamin"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text="@string/titikDua"/>
        <RadioGroup
            android:id="@+id/responJenisKelamin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/ebLaki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Laki-Laki"
                android:buttonTint="@color/colorBlack" />
            <RadioButton
                android:id="@+id/ebPerempuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Perempuan"
                android:buttonTint="@color/colorBlack"/>
        </RadioGroup>
    </LinearLayout>
    <View
        android:layout_width="280dp"
        android:layout_height="2dp"
        android:layout_gravity="right"
        android:background="@color/colorGrey"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tanggal Lahir "
            android:textSize="16sp"/>
        <TextView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:text="@string/titikDua"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Select Tanggal Lahir"
            android:id="@+id/ebDate"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>
    </LinearLayout>
    <View
        android:layout_width="280dp"
        android:layout_height="2dp"
        android:layout_gravity="right"
        android:background="@color/colorGrey"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <Button
            android:clickable="true"
            android:enabled="true"
            android:id="@+id/btn_update"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Perbaharui Data"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:background="#67B60E"
            android:textColor="#FFF"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="4dp"/>

    </LinearLayout>

</LinearLayout>